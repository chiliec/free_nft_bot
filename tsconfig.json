{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": ".",
    "paths": {
      "#root/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/web/**/*"]
}
